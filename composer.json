{
    "name": "scamposm/skeleton",
    "type": "library",
    "description": "",
    "keywords": [
        "scamposm",
        "skeleton"
    ],
    "homepage": "https://github.com/scamposm/skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergi Campos Mata",
            "email": "scamposm96@gmail.com",
            "homepage": "https://github.com/SCamposM",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Scamposm\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scamposm\\Skeleton\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
